<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">


    <LinearLayout
        android:id="@+id/cartlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"

        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/item_image_cart"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_margin="0dp"
            android:fadingEdge="@string/fab_transformation_scrim_behavior"
            android:focusable="auto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_image_cart"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Coffee"

                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="normal|bold" />

                <!--                <RatingBar-->
                <!--                    android:id="@+id/rating"-->
                <!--                    android:layout_marginTop="7dp"-->
                <!--                    android:layout_marginStart="40dp"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:numStars="5"-->
                <!--                    android:rating="3"-->
                <!--                    style="@style/Widget.AppCompat.RatingBar.Small"-->
                <!--                    />-->
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/productID"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    tools:ignore="Suspicious0dp" />


                <TextView
                    android:id="@+id/Price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="$20"
                    android:textAlignment="center"
                    android:textSize="12sp" />


                <!--                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton-->
                <!--                    android:id="@+id/cart_AmountButton"-->
                <!--                    android:layout_width="80dp"-->
                <!--                    android:layout_height="25dp"-->
                <!--                    app:initialNumber="1"-->
                <!--                    app:finalNumber="100"-->
                <!--                    app:backGroundColor="@color/colorAccent"-->
                <!--                    app:textSize="8sp" />-->
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>